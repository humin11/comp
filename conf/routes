# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index()
GET         /menu                         controllers.Application.menu()
GET         /dashboard                    controllers.Application.dashboard()
GET         /alarm                        controllers.Application.alarm()
GET         /reports                      controllers.Application.reports()
GET         /topology                     controllers.Application.topology()
GET         /performance                  controllers.Application.performance()
GET         /subsystem                    controllers.Application.subsystem()
GET         /storage                      controllers.Storages.index()
GET         /storage/summary              controllers.Storages.summary()
GET         /storage/port                 controllers.Storages.port()
GET         /storage/cache                controllers.Storages.cache()
GET         /storage/raidgroup            controllers.Storages.raidgroup()
GET         /storage/volume               controllers.Storages.volume()
GET         /storage/disk                 controllers.Storages.disk()
GET         /storage/hostgroup            controllers.Storages.hostgroup()
GET         /storage/json                 controllers.Storages.json()
GET         /storage/hostgroupJson        controllers.Storages.hostgroupJson()
GET         /business                     controllers.Business.index()
GET         /business/json                controllers.Business.json()
POST        /business/add                 controllers.Business.add()
GET         /switch                       controllers.Switchs.index()
GET         /switch/summary               controllers.Switchs.summary()
GET         /switch/port                  controllers.Switchs.port()
GET         /switch/json                  controllers.Switchs.json()
GET         /host                         controllers.Hosts.index()
GET         /host/json                    controllers.Hosts.json()
GET         /charts/options               controllers.Charts.options()
GET         /charts/kpi                   controllers.Charts.kpi()
GET         /datatables/options           controllers.Datatables.options()
GET         /reports/daily                controllers.Reports.daily()
GET         /topology/layer1              controllers.Topology.layer1()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
